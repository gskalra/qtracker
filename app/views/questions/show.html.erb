<h1><%= @question.title %></h1>

<p><%= @question.body %></p>

<ul>
  <li><%= link_to "Edit", edit_question_path(@question) %></li>
  <li><%= link_to "Destroy", question_path(@question),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>

<h2>Comments</h2>
<% render @question.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>